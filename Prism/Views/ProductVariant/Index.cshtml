@model IEnumerable<Prism.Models.ProductVariant>
@Scripts.Render("~/bundles/dataTable")
@{
    ViewBag.Title = "Index";
}
<h3>Product Variants</h3>

<p>
    <button id="submit" class="btn btn-primary" onclick="location.href='@Url.Action("Create")'" value="Create">
        <i class="glyphicon glyphicon-plus"></i>
        Create
    </button>
</p>
<table class="table" id="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Variant)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UPC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PositionID)
            </th>
            <th></th>
        </tr>
    </thead>


    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Variant)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UPC)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PositionID)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ProductVariantID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ProductVariantID })
            </tr>
        }
    </tbody>
    
</table>

<script>
    $(document).ready(function () {
        $('#table').DataTable({
            "ordering": true
        });
    });
</script>

