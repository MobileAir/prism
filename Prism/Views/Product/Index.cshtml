@model IEnumerable<Prism.Models.Product>

@{
    ViewBag.Title = "Index";
}
<script>
    $(document).ready(function () { $('#Products').DataTable() })
</script>
<h3>Product List</h3>

<p>
    <button id="submit" class="btn btn-primary" onclick="location.href='@Url.Action("Create")'" value="Create">
        <i class="glyphicon glyphicon-plus"></i>
        Create
    </button>
</p>
<table class="table" id="Products">
    <thead>
        <tr>
            @*<th>
                    @Html.DisplayNameFor(model => model.ProductID)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Company.Name)
            </th>
            <th>
                @** @Html.DisplayNameFor(model => model.Department.Name)*@
                Dept.
            </th>
            @* <th>*@
            @*@Html.DisplayNameFor(model => model.StockBalance.Quantity)*@
            @* </th>*@

            @*<th>
                @Html.DisplayNameFor(model => model.TargetGender)
            </th>*@
            @*<th>
                @Html.DisplayNameFor(model => model.TargetWeather)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.CostPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SellingPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupplyPrice)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @*<td>
                        @Html.DisplayFor(modelItem => item.ProductID)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.Company.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.Name)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.StockBalance.ProductID)*@
                @* </td>*@

                @*<td>
                    @Html.DisplayFor(modelItem => item.TargetGender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TargetWeather)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.CostPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SellingPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SupplyPrice)
                </td>
                <td>
                    <button id="submit" class="btn btn-success btn-xs" onclick="location.href='@Url.Action("Edit/" +item.ProductID, "Product")'" value="Edit" title="Edit">
                        <i class="glyphicon glyphicon-edit"></i>

                    </button>

                    <button id="submit" class="btn btn-warning btn-xs" onclick="location.href='@Url.Action("Details/" + item.ProductID, "Product")'" value="Details" title="Details">
                        <i class="glyphicon glyphicon-th-list"></i>

                    </button>
                </td>
            </tr>
        }
    </tbody>

</table>
<script type="text/javascript" src="~/Scripts/datatables.min.js"></script>
