@model IEnumerable<Prism.Models.SupplyPayment>
@Scripts.Render("~/bundles/dataTable")
@{
    ViewBag.Title = "Supply Payments";
}

<h3>Supply Payments</h3>

<p>
    @Html.ActionLink("New Payment", "Create")
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SupplyCustomer.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Remark)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SupplyCustomer.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Remark)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.SupplyPaymentID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.SupplyPaymentID }) @*|
                    @Html.ActionLink("Delete", "Delete", new { id = item.SupplyPaymentID })*@
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#table').DataTable({
            "ordering": true
        });
    });
</script>